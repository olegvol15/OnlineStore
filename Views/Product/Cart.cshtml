@model List<OnlineStore.Models.CartItem>

@{
    ViewData["Title"] = "Кошик";
}

<h2>Ваш кошик</h2>

@if (Model.Count == 0)
{
    <p>Ваш кошик порожній.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Назва</th>
                <th>Ціна</th>
                <th>Кількість</th>
                <th>Разом</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="ClearCart" class="btn btn-danger">Очистити кошик</a>
}
