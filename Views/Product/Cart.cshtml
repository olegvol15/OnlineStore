@model List<OnlineStore.Models.CartItem>

@{
    ViewData["Title"] = "Кошик";
}

<h2>Ваш кошик</h2>

@if (Model.Count == 0)
{
    <p>Ваш кошик порожній.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Назва</th>
                <th>Ціна</th>
                <th>Кількість</th>
                <th>Разом</th>
                <th>Дія</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>
                        <form method="post" asp-action="ModifyCart">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control" style="width: 70px; display: inline-block;" />
                            <button type="submit" class="btn btn-primary btn-sm">Змінити</button>
                        </form>
                    </td>
                    <td>@(item.Price * item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>
    <form method="post" asp-action="ClearCart">
    <button type="submit" class="btn btn-danger">Очистити кошик</button>
    </form>
 
}
