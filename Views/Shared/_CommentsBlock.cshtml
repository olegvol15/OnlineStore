<div style="max-height: 300px; overflow-y: auto;" class="border rounded p-2">
    @foreach (var review in Model)
    {
        <div class="mb-2">
            <strong>Оцінка:</strong> @review.Rating ⭐<br />
            <strong>Коментар:</strong> @review.Comment<br />
            <small class="text-muted">
                @(
                    review.CreatedAt.Date == DateTime.Today
                        ? review.CreatedAt.ToString("HH:mm")
                        : review.CreatedAt.ToString("dd.MM.yyyy")
                )
            </small>
        </div>
        <hr />
    }
</div>

